<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F7F7F7"
            android:backgroundTint="#03A9F4"
            android:foregroundTint="#EAEEF0"
            tools:background="#2196f3">

            <CheckBox
                android:id="@+id/itmChbxIsCompleted"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="25dp"
                android:layout_marginTop="198dp"
                android:buttonTint="#FFFFFF"
                android:text="isCompleted"
                android:textColor="#FFFFFF" />

            <ImageView
                android:id="@+id/itmImgInfo1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="101dp"
                android:layout_marginEnd="57dp"
                android:background="@color/common_google_signin_btn_text_dark_focused"
                app:srcCompat="@mipmap/ic_menu1" />

            <RatingBar
                android:id="@+id/itmRatingPrio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="177dp"
                android:layout_marginEnd="15dp" />

            <TextView
                android:id="@+id/itmTvSubject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="157dp"
                android:layout_marginTop="127dp"
                android:fontFamily="sans-serif-smallcaps"
                android:text="TextView"
                android:textSize="24sp"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/itmTvTitle"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="154dp"
                android:layout_marginTop="69dp"
                android:fontFamily="sans-serif-smallcaps"
                android:text="TextView"
                android:textSize="24sp"
                android:textStyle="bold|italic" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>